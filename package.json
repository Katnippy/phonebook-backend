    "mongoose": "^8.0.1",
    "morgan": "^1.10.0"
  },
  "type": "module",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.4.1",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
